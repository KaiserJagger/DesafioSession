

<h3>{{this.title}}</h3>
<div class="filters">
    <div class="category">
        <a href='/products'>Todas las categorías</a><br> 
    </div>
 </div>   
<table id="product">
    <tr>
        <td><strong>Producto</strong></td> 
        <td><strong>Descripción</strong></td>
        <td><strong>Precio</strong></td>
        <td><strong>Código</strong></td>
        <td><strong>Stock</strong></td>
        <td><strong>Categoría</strong></td>
        
    </tr>
    {{#each data.docs}}
    <tr>
    <td>{{this.title}}</td>
    <td>{{this.description}}</td>
    <td>{{this.price}}</td>
    <td>{{this.code}}</td>
    <td>{{this.stock}}</td>
    <td>{{this.category}}</td>
    <td><input class type="button" value="Agregar al carro"></td>
    </tr>
    {{/each}}  
</table>